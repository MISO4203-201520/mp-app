<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="AppMarketPlacePU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>co.edu.uniandes.csw.appmarketplace.entities.AdminEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.AppEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.AppImageEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.AppVideoEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.AppSourceEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.CartItemEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.ClientEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.Comment</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.DeveloperEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.PaymentCardEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.PaymentMethodEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.QuestionEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.RateEntity</class>
    <class>co.edu.uniandes.csw.appmarketplace.entities.TransactionEntity</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.target-database" value="Derby"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/jdbcAppMarketPlaceTest"/>
      <property name="javax.persistence.jdbc.user" value="APP"/>
      <property name="javax.persistence.jdbc.password" value="APP"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
